<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/correctResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/current_result"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/incorrectTitle"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/incorrect_title"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/correctTitle"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/correctResult"
            android:text="@string/correct_title"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/incorrectResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/incorrectTitle"
            android:text="@string/current_result"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
    </RelativeLayout>
    
    
    
    <Button
        android:id="@+id/answer4"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="onAnswer4"
        android:text="Button" />

    <Button
        android:id="@+id/answer3"
        android:layout_width=".50"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answer4"
        android:layout_alignLeft="@+id/answer4"
        android:layout_alignParentRight="true"
        android:onClick="onAnswer3"
        android:text="Button" />

    <Button
        android:id="@+id/answer2"
        android:layout_width=".50"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/answer1"
        android:onClick="onAnswer2"
        android:text="Button" />

    <Button
        android:id="@+id/answer1"
        android:layout_width=".50"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answer2"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/answer4"
        android:onClick="onAnswer1"
        android:text="Button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/answer1"
        android:gravity="center_vertical|fill_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/wordToCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop=".50"
            android:gravity="center"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
    
</RelativeLayout>